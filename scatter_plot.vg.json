{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 700,
    "width": 1400,
    "title": "Danieal Ricciardo Results by Constructor",
    "data": {
      "url": "data/DR_all_races.csv"
    },
    "params":[
        {
        "name": "constructor_highlight",
        "select": {"type": "point", "fields": ["Constructor"]},
        "bind": "legend"
        }, 
        {
            "name": "Choose_Constructor",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "HRT",
                    "McLaren",
                    "Red Bull",
                    "Renault",
                    "Toro Rosso"
                ],
                "labels":[
                    "Show All",
                    "HRT",
                    "McLaren",
                    "Red Bull",
                    "Renault",
                    "Toro Rosso"
                ]
            }
        }
    ],
    "transform": [
        {"filter": "Choose_Constructor == null || datum.Constructor == Choose_Constructor"}
    ],
    "mark": "circle",
    "encoding": {
        "x": {
            "field": "Race-Date",
            "type": "temporal"
        },
        "y": {
            "field": "Position",
            "type": "quantitative",
            "scale": {
                "reverse": true
            }
        },
        "color": {
            "field": "Constructor",
            "type": "nominal",
            "scale": {
                "domain": [
                    "HRT",
                    "McLaren",
                    "Red Bull",
                    "Renault",
                    "Toro Rosso"
                ],
                "range": [
                    "#fa64d3",
                    "#ff7f00",
                    "#e41a1c",
                    "#dfdf20",
                    "#377eb8"
                ]
            }
        
        },
        "opacity": {
            "condition": {"param": "constructor_highlight", "value": 0.6},
            "value": 0.2
        },
        "size": {
            "field": "Qualifying-Position",
            "type": "quantitative",
            "scale": {
                "reverse": true,
                "type": "threshold",
                "domain": [3.01, 10, 15, 20],
                "range": [50, 100, 400, 600]
            }
        },
        "tooltip": [
            {"field": "Race-Date", "type": "temporal"},
            {"field": "Race-Location", "type": "nominal"},
            {"field": "Constructor", "type": "nominal"},
            {"field": "Qualifying-Position", "type": "quantitative"},
            {"field": "Position", "type": "quantitative"},
            {"field": "DNF", "type": "nominal"}
        ]
    }
}